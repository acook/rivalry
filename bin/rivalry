#!/usr/bin/env ruby

begin
  require 'rivalry'
rescue LoadError
  $: << File.expand_path(File.join(File.dirname(__FILE__), '../lib'))
  require 'rivalry'
end

include Rivalry::Display

class Pathname
  alias_method :each, :each_child
  alias_method :exists?, :exist?
end

def run path
  scanner = Rivalry::Scanner.new path
  files = scanner.scan
  files.each do |file|
    #puts file.to_s
  end
end

path = ARGV.first || usage

run path
